<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewNomeCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Honda Civic"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textViewCilindradaCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewNomeCarro"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1.6"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textViewPlacaCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textViewCilindradaCarro"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:text="POG-4532"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textViewQtdPessoasCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewPlacaCarro"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:text="5"/>

    <TextView
        android:id="@+id/textViewMostraTextoPessoas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewQtdPessoasCarro"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Pessoas"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNomeCarro"
        android:text="ID:"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textViewConteudoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textViewID"
        app:layout_constraintTop_toBottomOf="@id/textViewNomeCarro"
        android:text="adsfjhafauopfh6567"
        android:layout_marginLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>























