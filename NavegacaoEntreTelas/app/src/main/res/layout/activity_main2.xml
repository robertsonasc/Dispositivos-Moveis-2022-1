<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/editTextModeloCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:ems="13"
        android:inputType="text"
        android:hint="Modelo do carro"/>

    <EditText
        android:id="@+id/editTextCilindradaCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextModeloCarro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="13"
        android:hint="Cilindrada"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editTextNumeroPessoasCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCilindradaCarro"
        app:layout_constraintEnd_toEndOf="parent"
        android:ems="13"
        android:hint="NÃºmero de pessoas no carro"
        android:inputType="number"/>

    <EditText
        android:id="@+id/editTextPlacaCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNumeroPessoasCarro"
        android:ems="13"
        android:hint="Placa"
        android:inputType="text"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/buttonCancelarCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPlacaCarro"
        app:layout_constraintStart_toStartOf="@id/editTextPlacaCarro"
        />

    <Button
        android:id="@+id/buttonConfirmarCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editTextPlacaCarro"
        app:layout_constraintEnd_toEndOf="@id/editTextPlacaCarro"
        android:text="Confirmar"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>